            <div class="tool-tip bg-white position-absolute"
                style="display: none;top: 0px; left: 200px; box-shadow: 3px 3px 15px rgba(0,0,0,0.1); width: max-content;"
                data-tool-tip="Logout your current Account">
                <p class="tool-tip__content my-auto p-3" style="max-width: 200px;">Logout current Account</p>
            </div>
            <script>
                var tooltip = document.querySelector(`.tool-tip`);

                function showToolTip() {
                    tooltip.classList.add('d-block');
                }

                function hideToolTip() {
                    tooltip.classList.remove('d-block');
                }
                window.showToolTip = showToolTip;
            </script>
        </div>
