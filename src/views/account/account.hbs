                                    <input class="form-control" type="password" name="password"
                                        value="{{userCurrent.password}}" disabled>
                                    <button type="button" class="btn btn-change text-decoration-underline text-primary"
                                        data-btn-change="password">Change</button>
                                </div>
                            </li>
                            <li>
                                <div class="d-flex justify-content-start align-items-center">
                                    <label class="fs-5 col-1 col-md-2" style="margin-right: 20px;"
                                        for="username">Email</label>
                                    <input class="form-control" type="text" name="email" value="{{userCurrent.email}}"
                                        disabled>
                                    <button type="button" class="btn btn-change text-decoration-underline text-primary"
                                        data-btn-change="email">Change</button>
                                </div>
                            </li>
                        </ul>
                        <div class="d-flex justify-content-end my-5">
                            <button class="btn btn-outline-primary py-2 px-4 rounded-0" type="submit">Save
                                change</button>
                        </div>
